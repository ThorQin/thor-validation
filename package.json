{
  "name": "thor-validation",
  "version": "1.1.2",
  "description": "A simple data validation toolkit.",
  "repository": {
    "url": "https://gitee.com/thor.qin/thor-validation.git"
  },
  "main": "./dist/cjs/index.js",
  "exports": "./dist/esm/index.mjs",
  "keywords": [
    "data",
    "time"
  ],
  "author": "thor.qin@outlook.com",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "typescript": "^4.0.5",
    "renamer": "^2.0.1"
  },
  "scripts": {
    "build-esm": "tsc --outDir ./dist/esm  -P tsconfig.json && renamer --find js --replace mjs ./dist/esm/**",
    "build-cjs": "tsc --module commonjs --outDir ./dist/cjs -P tsconfig.json",
    "build": "rm -rf ./dist/* && npm run build-esm && npm run build-cjs",
    "postbuild": "prettier --write ./dist"
  }
}
